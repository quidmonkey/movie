{
  "env": {
      "es6": true,
      "node": true,
      "jest": true
  },
  "extends": [
      "eslint:recommended",
      "prettier"
  ],
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "no-console": 0,
      "no-unused-vars": [
          "error",
          { "args": "none" }
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}
