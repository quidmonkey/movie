{
  "name": "movies",
  "version": "1.0.0",
  "description": "A Serverless CRUD service for Movies",
  "author": "Abraham Walters",
  "license": "MIT",
  "dependencies": {
    "apollo-server-lambda": "^2.0.3",
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "graphql-constraint-directive": "^1.2.0",
    "humps": "^2.0.1",
    "joi": "^13.5.2",
    "jsonwebtoken": "^8.3.0",
    "node-fetch": "^2.2.0",
    "serverless": "^1.30.0",
    "serverless-dynamodb-client": "0.0.2",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.25.7",
    "uuid": "^2.0.3",
    "yargs": "^12.0.1"
  },
  "scripts": {
    "build": "AWS_SDK_LOAD_CONFIG=1 bash auth/deploy-secret.sh JWT_SECRET auth/secrets.json && serverless deploy -v",
    "coverage": "jest --coverage --silent",
    "debug": "AWS_SDK_LOAD_CONFIG=1 SLS_DEBUG=1 serverless offline start",
    "dev": "AWS_SDK_LOAD_CONFIG=1 serverless offline start",
    "kill-dynamo": "ps aux | grep dynamodb | grep -v grep | awk '{ print $2 }' | xargs kill",
    "lint": "eslint --fix --quiet --ignore-path .eslintignore src/**/*.js",
    "integration": "jest --coverage --silent src/**/*.spec.js",
    "quality": "AWS_SDK_LOAD_CONFIG=1 serverless offline --exec 'npm run coverage' start && npm run kill-dynamo",
    "prepush": "npm run validate",
    "postinstall": "auth/create-secret.sh && serverless dynamodb install",
    "test": "jest --verbose --watch",
    "unit": "jest --coverage --silent src/**/*.test.js",
    "validate": "cross-env CI=true npm-run-all --parallel lint quality"
  },
  "devDependencies": {
    "aws-sdk-mock": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-fetch-mock": "^1.6.5",
    "npm-run-all": "^4.1.3",
    "query-string": "^6.1.0"
  }
}
