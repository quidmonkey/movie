{
  "name": "movies",
  "version": "1.0.0",
  "description": "A Serverless CRUD service for Movies",
  "author": "Abraham Walters",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "humps": "^2.0.1",
    "joi": "^13.5.2",
    "jsonwebtoken": "^8.3.0",
    "node-fetch": "^2.2.0",
    "serverless": "^1.30.0",
    "serverless-dynamodb-client": "0.0.2",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.25.7",
    "uuid": "^2.0.3",
    "yargs": "^12.0.1"
  },
  "scripts": {
    "build": "AWS_SDK_LOAD_CONFIG=1 serverless deploy -v",
    "coverage": "NODE_ENV=local jest --coverage --silent",
    "debug": "AWS_SDK_LOAD_CONFIG=1 SLS_DEBUG=1 serverless offline start",
    "dev": "AWS_SDK_LOAD_CONFIG=1 NODE_ENV=local serverless offline start",
    "kill-dynamo": "ps aux | grep dynamodb | grep -v grep | awk '{ print $2 }' | xargs kill",
    "lint": "eslint --fix --quiet --ignore-path .eslintignore movies/*.js",
    "integration": "NODE_ENV=local jest --coverage --silent movies/*.spec.js",
    "quality": "AWS_SDK_LOAD_CONFIG=1 NODE_ENV=local serverless offline --exec 'npm run coverage' start && npm run kill-dynamo",
    "prepush": "npm run validate",
    "postinstall": "serverless dynamodb install",
    "test": "NODE_ENV=local jest --verbose --watch",
    "unit": "NODE_ENV=local jest --coverage --silent movies/*.test.js",
    "validate": "cross-env CI=true npm-run-all --parallel lint quality"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-fetch-mock": "^1.6.5",
    "npm-run-all": "^4.1.3"
  }
}
