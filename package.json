{
  "name": "movies",
  "version": "1.0.0",
  "description": "A Serverless CRUD service for Movies",
  "author": "Abraham Walters",
  "license": "MIT",
  "dependencies": {
    "joi": "^13.5.2",
    "node-fetch": "^2.2.0",
    "serverless": "^1.30.0",
    "serverless-dynamodb-client": "0.0.2",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.25.7",
    "uuid": "^2.0.3"
  },
  "scripts": {
    "build": "AWS_SDK_LOAD_CONFIG=1 serverless deploy -v",
    "coverage": "jest --coverage --silent",
    "debug": "AWS_SDK_LOAD_CONFIG=1 SLS_DEBUG=1 serverless offline start",
    "dev": "AWS_SDK_LOAD_CONFIG=1 serverless offline start",
    "lint": "eslint --fix --quiet --ignore-path .eslintignore movies/*.js",
    "postinstall": "serverless install dynamodb",
    "test": "jest --verbose --watch"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "jest": "^23.5.0"
  }
}
